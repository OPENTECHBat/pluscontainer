<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_inherit_min_qty" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.min.qty</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='stock']/block[@name='operations_setting_container']" position="after">
                <block>
                    <setting class="app_settings_block" help="When this button is activated, the 'Minimum Stock Qty' field becomes visible in the product form view" data-string="Minimum Quantity" string="Minimum Quantity">
                        <field name="show_min_qty_field"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>