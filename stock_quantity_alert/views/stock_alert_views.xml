<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_stock_alert_tree" model="ir.ui.view">
        <field name="name">stock.alert.tree</field>
        <field name="model">stock.alert</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id" widget="many2one"/>
                <field name="qty_available"/>
            </list>
        </field>
    </record>

    <record id="action_stock_alert" model="ir.actions.act_window">
        <field name="name">Low Stock Alerts</field>
        <field name="res_model">stock.alert</field>
        <field name="view_mode">list</field>
    </record>
    <menuitem id="menu_stock_alert_root" name="Low Stock Alerts" parent="stock.menu_warehouse_report" action="action_stock_alert"/>
</odoo>